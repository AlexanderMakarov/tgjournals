{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "gradle: test",
            "type": "shell",
            "command": "./gradlew test",
            "group": "test",
            "presentation": { "echo": true, "reveal": "always", "focus": false, "panel": "shared", "showReuseMessage": true, "clear": false },
            "problemMatcher": []
        },
        {
            "label": "gradle: warm-daemon",
            "type": "shell",
            "command": "./gradlew --daemon classes",
            "presentation": { "reveal": "silent", "panel": "shared" },
            "problemMatcher": [],
            "isBackground": false
        },
        {
            "label": "gradle: bootRun-debug",
            "type": "shell",
            "dependsOn": ["gradle: warm-daemon"],
            "command": "./gradlew bootRun --debug-jvm -Dspring-boot.run.jvmArguments=\"-Dspring.profiles.active=dev -Dspring.aot.enabled=false\"",
            "presentation": { "reveal": "always", "panel": "shared" },
            "problemMatcher": {
                "pattern": {
                    "regexp": ".*",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Listening for transport dt_socket",
                    "endsPattern": "Listening for transport dt_socket"
                }
            },
            "isBackground": true
        },
        {
            "label": "gradle: stop-bootRun",
            "type": "shell",
            "command": "./gradlew --stop",
            "problemMatcher": [],
            "isBackground": false
        }
    ]
}
